{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths" : {
      "v1/*" : ["api/1.0/*"],
      "v2/*" : ["api/2.0/*"],
      "v3/*" : ["api/3.0/*"],
      "v4/*" : ["api/4.0/*"],
      "lib/*" : ["lib/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": false,
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}